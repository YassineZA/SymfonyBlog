{% extends "base.html.twig" %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'attr': {'placeholder': "Nom d'utilisateur ..."}, 'label': "Nom d'utilisateur"}) }}

    {{ form_row(form.email, {'attr': {'placeholder': "Addresse Email ..."}, 'label': "Email"}) }}

    {{ form_row(form.password, {'attr': {'placeholder': "Mot de passe ..."}, 'label': "Mot de passe"}) }}

    {{ form_row(form.confirm_password, {'attr': {'placeholder': "Confirmer le mot de passe ..."}, 'label': "Confirmer"}) }}

    <button type="submit" class="btn btn-success">Inscription !</button>

    {{ form_end(form) }}
{% endblock %}